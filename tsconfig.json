{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ESNext",                      // ✅ Modern output for Vite
    "lib": ["DOM", "DOM.Iterable", "ESNext"],// ✅ Browser + latest JS APIs
    "module": "ESNext",                      // ✅ Keep modules modern
    "moduleResolution": "Node",              // ✅ Resolve npm packages
    "allowSyntheticDefaultImports": true,    // ✅ Helps with React imports
    "esModuleInterop": true,                 // ✅ Fixes default import issues
    "jsx": "react-jsx",                      // ✅ Needed for React 17+
    "baseUrl": ".",                          // ✅ For paths
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,                    // ✅ Skip type-checking node_modules
    "forceConsistentCasingInFileNames": true,// ✅ Avoid case issues on Linux
    "strict": false,                         // ❌ Disabled strict mode (optional)
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  }
}
